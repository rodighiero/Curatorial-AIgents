                <dd>
                                                                 <a href=https://www.harvardartmuseums.org/collections/person/19149>Gerbrand van den Eeckhout</a>, Dutch                                                                                                                                                                                                                                                                          (Amsterdam, Netherlands 1621 - 1674 Amsterdam, Netherlands)
                                            <br>
                                    </dd>
            
                            <dt>Title</dt>
                <dd>A Seated Man in Middle Eastern Costume</dd>
            
                                                                                                            
                            <dt>Classification</dt>
                <dd>Drawings</dd>
                                        <dt>Work Type</dt>
                <dd>
                                                            drawing                                                      </dd>
                                        <dt>Date</dt>
                <dd>c. 1646</dd>
                                                                <dt>Culture</dt>
                <dd>Dutch</dd>
